<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xs
    http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">

    <camelContext xmlns="http://camel.apache.org/schema/spring" trace="true">
        <route id="activemq-hornetq">
            <from uri="activemq:queue:queueA" />
            <transacted />
            <to uri="hornetq:queue:queueB" />
        </route>

        <route id="hornetq-activemq">
            <from uri="hornetq:queue:queueB" />
            <transacted />
            <to uri="activemq:queue:queueC" />
        </route>
    </camelContext>

</beans>
